---
import { getSingletonData } from '../../lib/keystatic-reader';
import PillarPage from '../../components/templates/PillarPage.astro';

const pillar = await getSingletonData('situatiesPillar');
const data = pillar || {};
const introContent = data.introContent || undefined;
---

<PillarPage
  title={data.title || 'Noodsituaties'}
  description={data.description || 'Leer wat te doen bij verschillende noodsituaties. Van stroomuitval tot evacuatie - we helpen je voorbereid te zijn op elke crisis.'}
  silo="situaties"
  keywords={data.keywords || ['noodsituaties', 'crisis', 'noodscenario', 'voorbereiding']}
  faqs={data.faqs || []}
  seoTitle={data.seoTitle || 'Noodsituaties - Wat te Doen bij Crisis | Noodpakket Center'}
  seoDescription={data.seoDescription || 'Leer wat te doen bij verschillende noodsituaties. Complete gids voor stroomuitval, overstroming, evacuatie en meer crisis scenario\'s.'}
  introContent={introContent}
  whatYoullFind={data.whatYoullFind || []}
/>
