---
import { getSingletonData } from '../../lib/keystatic-reader';
import PillarPage from '../../components/templates/PillarPage.astro';

const pillar = await getSingletonData('vergelijkingPillar');
const data = pillar || {};
const introContent = data.introContent || undefined;
---

<PillarPage
  title={data.title || 'Vergelijkingen'}
  description={data.description || 'Vergelijk de beste producten voor je noodpakket. Onafhankelijke reviews en vergelijkingen van noodpakketten, EHBO-sets, en meer.'}
  silo="vergelijking"
  keywords={data.keywords || ['vergelijking', 'reviews', 'beste producten', 'noodpakket vergelijken']}
  faqs={data.faqs || []}
  seoTitle={data.seoTitle || 'Vergelijkingen - Vergelijk Producten voor Noodpakketten | Noodpakket Center'}
  seoDescription={data.seoDescription || 'Vergelijk de beste producten voor je noodpakket. Onafhankelijke reviews en vergelijkingen van noodpakketten, EHBO-sets, en meer.'}
  introContent={introContent}
  whatYoullFind={data.whatYoullFind || []}
/>
