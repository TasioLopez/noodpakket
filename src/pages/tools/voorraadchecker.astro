---
import ToolPage from '../../components/templates/ToolPage.astro';
import Voorraadchecker from '../../components/tools/Voorraadchecker';

const faqs = [
  {
    question: 'Hoe vaak moet ik mijn voorraad controleren?',
    answer: 'Het wordt aangeraden om je voorraad minimaal 2 keer per jaar te controleren, bij voorkeur in het voor- en najaar. Controleer ook houdbaarheidsdata.',
  },
  {
    question: 'Wat als ik niet alles heb?',
    answer: 'Begin met de essentieel items zoals water, voedsel en EHBO. Bouw geleidelijk uit. Gebruik de export functie om een boodschappenlijst te genereren.',
  },
];
