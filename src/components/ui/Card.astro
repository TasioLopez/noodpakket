---
interface Props {
  title: string;
  description?: string;
  url?: string;
  image?: string;
  iconColor?: 'primary' | 'accent';
  class?: string;
}

const { title, description, url, image, iconColor = 'primary', class: className = '' } = Astro.props;

const iconColors = {
  primary: 'bg-primary-500',
  accent: 'bg-accent-500',
};

const getCategoryIcon = (title: string) => {
