---

<div class={`card ${className}`}>
  {image ? (
    <div class="mb-5 aspect-video bg-neutral-100 rounded-lg overflow-hidden relative group">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" 
        onerror={`this.style.display='none'; this.nextElementSibling.style.display='flex';`} 
      />
      <div class={`hidden w-full h-full ${iconColors[iconColor]} items-center justify-center absolute inset-0`}>
        <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d={getCategoryIcon(title)} />
        </svg>
      </div>
    </div>
  ) : (
    <div class={`mb-5 aspect-video ${iconColors[iconColor]} rounded-lg flex items-center justify-center transition-all duration-300 hover:opacity-90`}>
      <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d={getCategoryIcon(title)} />
      </svg>
    </div>
  )}
  
  {url ? (
    <a href={url} class="block group no-underline">
      <h3 class="text-xl font-bold text-neutral-900 group-hover:text-primary-500 transition-colors mb-3">
        {title}
      </h3>
      {description && (
        <p class="text-neutral-600 leading-relaxed">{description}</p>
      )}
    </a>
  ) : (
    <>
      <h3 class="text-xl font-bold text-neutral-900 mb-3">
        {title}
      </h3>
      {description && (
        <p class="text-neutral-600 leading-relaxed">{description}</p>
      )}
    </>
  )}
  
  <slot />
</div>
