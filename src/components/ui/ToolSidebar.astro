---
import type { PageLink } from '@lib/internal-linking';
import Card from './Card.astro';

interface Props {
  tools: PageLink[];
  title?: string;
  class?: string;
}

const { tools, title = 'Handige Tools', class: className = '' } = Astro.props;

if (!tools || tools.length === 0) {
  return null;
}
---

<aside class={`${className}`}>
  <div class="bg-neutral-50 rounded-lg p-6 border border-neutral-200">
    <h3 class="text-lg font-semibold text-neutral-900 mb-4">{title}</h3>
    
    <div class="space-y-3">
      {tools.map((tool) => (
        <a
          href={tool.url}
          class="block p-3 bg-white rounded-lg border border-neutral-200 hover:border-primary-300 hover:shadow-sm transition-all"
        >
          <h4 class="font-medium text-neutral-900 mb-1">{tool.title}</h4>
          {tool.description && (
            <p class="text-sm text-neutral-600">{tool.description}</p>
          )}
        </a>
      ))}
    </div>
  </div>
</aside>


