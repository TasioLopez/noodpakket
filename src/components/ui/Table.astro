---
interface Props {
  headers: string[];
  rows: string[][];
  class?: string;
}

const { headers, rows, class: className = '' } = Astro.props;
---

<div class={`overflow-x-auto ${className}`}>
  <table class="min-w-full divide-y divide-neutral-200 border border-neutral-200 rounded-lg">
    <thead class="bg-neutral-50">
      <tr>
        {headers.map((header) => (
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-900 uppercase tracking-wider">
            {header}
          </th>
        ))}
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-neutral-200">
      {rows.map((row) => (
        <tr class="hover:bg-neutral-50">
          {row.map((cell) => (
            <td class="px-6 py-4 whitespace-nowrap text-sm text-neutral-700">
              {cell}
            </td>
          ))}
        </tr>
      ))}
    </tbody>
  </table>
</div>


