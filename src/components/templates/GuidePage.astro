---
import BaseLayout from '../layout/BaseLayout.astro';
import FAQ from '../ui/FAQ.astro';
import ToolSidebar from '../ui/ToolSidebar.astro';
import RelatedPages from '../ui/RelatedPages.astro';
import { getRelatedTools, getSiblingPages } from '@lib/internal-linking';
import type { Silo } from '@lib/internal-linking';

interface GuideStep {
  title: string;
  content: string;
  image?: string;
}

interface Props {
  title: string;
  description: string;
  content: string;
  steps?: GuideStep[];
  tips?: string[];
  keywords?: string[];
  faqs?: Array<{ question: string; answer: string }>;
  seoTitle?: string;
  seoDescription?: string;
}

const {
  title,
  description,
  content,
  steps = [],
  tips = [],
  keywords = [],
  faqs = [],
  seoTitle,
  seoDescription,
} = Astro.props;

const relatedTools = getRelatedTools(keywords);
const siblingPages = getSiblingPages('gidsen', title.toLowerCase().replace(/\s+/g, '-'), 3);
---

<BaseLayout
  seo={{
    title: seoTitle || title,
    description: seoDescription || description,
    keywords,
    canonical: `/gidsen/${title.toLowerCase().replace(/\s+/g, '-')}`,
  }}
  breadcrumbs={[
    { name: 'Gidsen', url: '/gidsen' },
    { name: title, url: `/gidsen/${title.toLowerCase().replace(/\s+/g, '-')}` },
  ]}
>
  <div class="container-custom section section-white">
    <div class="max-w-4xl mx-auto">
      <article>
        <h1 class="mb-6">{title}</h1>
        <p class="text-lg text-neutral-600 mb-8">{description}</p>
        
        <div class="prose-custom mb-8">
          <div set:html={content} />
        </div>
        
        {steps.length > 0 && (
          <section class="mb-12">
            <h2 class="text-2xl font-semibold text-neutral-900 mb-6">Stap-voor-Stap Gids</h2>
            <div class="space-y-8">
              {steps.map((step, index) => (
                <div class="card">
                  <div class="flex items-start">
                    <div class="flex-shrink-0 w-10 h-10 bg-primary-600 text-white rounded-full flex items-center justify-center font-semibold mr-4">
                      {index + 1}
                    </div>
                    <div class="flex-1">
                      <h3 class="text-xl font-semibold text-neutral-900 mb-2">{step.title}</h3>
                      {step.image && (
                        <img src={step.image} alt={step.title} class="rounded-lg mb-4" />
                      )}
                      <div class="prose-custom text-neutral-700">
                        <p>{step.content}</p>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </section>
        )}
        
        {tips.length > 0 && (
          <section class="callout-info mb-8">
            <h2 class="text-2xl font-semibold mb-4">Tips</h2>
            <ul class="space-y-2">
              {tips.map((tip) => (
                <li class="flex items-start">
                  <span class="text-primary-600 mr-2">â€¢</span>
                  <span class="text-neutral-700">{tip}</span>
                </li>
              ))}
            </ul>
          </section>
        )}
      </article>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mt-12">
        <div class="lg:col-span-2 space-y-8">
          {faqs.length > 0 && <FAQ faqs={faqs} />}
          
          {siblingPages.length > 0 && (
            <RelatedPages pages={siblingPages} title="Gerelateerde Gidsen" />
          )}
        </div>
        
        {relatedTools.length > 0 && (
          <div class="lg:col-span-1">
            <ToolSidebar tools={relatedTools} />
          </div>
        )}
      </div>
    </div>
  </div>
</BaseLayout>
