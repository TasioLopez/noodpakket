---
import Header from '../layout/Header.astro';
import Footer from '../layout/Footer.astro';
import Breadcrumbs from '../layout/Breadcrumbs.astro';
import { generateSEOTags } from '@lib/seo';
import type { SEOConfig } from '@lib/seo';
import '../../styles/global.css';

interface Props {
  seo: SEOConfig;
  breadcrumbs?: Array<{ name: string; url: string }>;
}

const { seo, breadcrumbs = [] } = Astro.props;
const seoTags = generateSEOTags(seo);

// Add home to breadcrumbs if not present
const fullBreadcrumbs = breadcrumbs.length > 0 
  ? [{ name: 'Home', url: '/' }, ...breadcrumbs]
  : [];
---

<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{seoTags.title}</title>
    
    {seoTags.meta.map((tag) => {
      if ('charset' in tag) {
        return <meta charset={tag.charset} />;
      }
      if ('name' in tag) {
        return <meta name={tag.name} content={tag.content} />;
      }
      if ('property' in tag) {
        return <meta property={tag.property} content={tag.content} />;
      }
      if ('rel' in tag) {
        return <link rel={tag.rel} href={tag.href} />;
      }
      return null;
    })}
  </head>
  <body>
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary-500 focus:text-white focus:rounded-lg">
      Skip naar hoofdinhoud
    </a>
    
    <Header />
    
    {fullBreadcrumbs.length > 0 && <Breadcrumbs items={fullBreadcrumbs} />}
    
    <main id="main-content">
      <slot />
    </main>
    
    <Footer />
  </body>
</html>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
  
  .focus\:not-sr-only:focus {
    position: static;
    width: auto;
    height: auto;
    padding: inherit;
    margin: inherit;
    overflow: visible;
    clip: auto;
    white-space: normal;
  }
</style>
